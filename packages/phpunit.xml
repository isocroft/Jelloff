<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="../app.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnError="true"
         stopOnFailure="false"
         syntaxCheck="true"
         verbose="true">

            <testsuites>
                <testsuite name="Jollof Framework - App Test Suite">
                    <directory suffix="Test.php">../system/tests/framework</directory>
                </testsuite>
                <!-- Add your own test suites below -->

            </testsuites>

</phpunit>
